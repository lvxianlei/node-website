<%- include('./common/header',{title,filePath}) %>
<div class="container">
    <div class="top_bj">
    </div>
    <div class="news_main">
        <ul>
            <li>
                <a class="<%= type==='group' ? 'active' :'' %>" href="/news/group">集团新闻</a>
                <a class="<%= type==='subcompany' ? 'active' :'' %>" href="/news/subcompany">分子公司</a>
            </li>
        </ul>
        <div class="content">
            <div class="jt_news">
                <% for(let i=0; i < news.length; i++ ) { %>
                <% if(i===0){ %>
                <a class="jt_news_item" href="/news/<%= type %>/<%= news[i].banner_id %>" target="_blank">
                    <div class="left">
                        <h2>
                            <%= news[i].publish_time%>
                        </h2>
                        <h3>
                            <%= news[i].title%>
                        </h3>
                        <p>
                            <%= news[i].summary%>
                        </p>
                    </div>
                    <div class="right">
                        <img src="<%= news[i].cover_pic_url%>" alt="">
                    </div>
                </a>
                <%} else {%>
                <a class="jt_news_item1" href="/news/<%= type %>/<%= news[i].id %>" target="_blank">
                    <div class="jt_news_itemMain">
                        <div class="left">
                            <% for(let j=0; j < news[i].publish_time.split(" ").length; j++) { %>
                            <p>
                                <%=news[i].publish_time.split(" ")[j]%>
                            </p>
                            <% }%>
                        </div>
                        <div class="right">
                            <h2>
                                <%= news[i].title%>
                            </h2>
                            <p>
                                <%= news[i].summary%>
                            </p>
                        </div>
                    </div>
                </a>
                <%}%>
                <% } %>
            </div>
            <button type="点击查看更多" id="8" class="more"></button>
        </div>
    </div>
</div>
<script type="text/javascript" src='/js/ejs.min.js'></script>
<%- include('./common/footer.ejs') %>